---
import info from "../data/sample.json"

const {title = `${info.name}`}=Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content="{Astro.generator}" />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta
      name="description"
      content="Ahmed Omran's Portfolio - Front-End Developer specializing in HTML, CSS, JavaScript, and React. Check out my projects and contact me."
    />
    <meta
      name="keywords"
      content="Ahmed Omran, Frontend Developer, React, Next.js, JavaScript, TypeScript, Portfolio"
    />
    <meta name="author" content="Ahmed Omran" />

    <!-- Icons -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <link href="../styles/global.css" rel="stylesheet" />
    <!-- Google tag (gtag.js) -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-G39QYJSQQB"
    ></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
            window.dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", "G-G39QYJSQQB");
    </script>
  </head>

  <body class="bg-primary-800 px-2">
    <slot />
  </body>
</html>
